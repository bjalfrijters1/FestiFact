<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Festifact.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Festifact.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Festivals"
            ContentTemplate="{DataTemplate views:FestivalListPage}"
            Route="MainPage" />
        <ShellContent
            Title="Shows"
            ContentTemplate="{DataTemplate views:ShowListPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
        <ShellContent
            Title="Performers"
            ContentTemplate="{DataTemplate views:PerformerListPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
        <ShellContent
            Title="User"
            ContentTemplate="{DataTemplate views:UserPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}"
            />
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
    </TabBar>
        
</Shell>
