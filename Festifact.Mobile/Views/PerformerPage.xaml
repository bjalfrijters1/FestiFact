<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Festifact.Mobile.Views.PerformerPage" 
             xmlns:vm="clr-namespace:Festifact.Mobile.ViewModels"
             x:DataType="vm:PerformerViewModel"
			 Title="{Binding Title}">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="0,10,0,10" />
            <Setter Property="FontAttributes"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout Margin="20">
        <Label Text="Performer name"/>
        <Label Text="{Binding Path=Performer.Name}"
               FontSize="16" FontAttributes="None"/>
        <Label Text="Performer description" />
        <Label Text="{Binding Path=Performer.Description}"
               FontSize="16" FontAttributes="None"/>
        <Button Text="Add to favourite"
                Command="{Binding AddToFavouriteCommand}" />
    </VerticalStackLayout>
</ContentPage>